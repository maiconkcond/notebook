<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{ @kinds.model.model_name.human(count: @kinds.count)}" %></h1>

    <%= link_to new_kind_path do %>
      <% image_tag('if_sign-add_299068.png')%>
    <% end %>
    <br/>

  <table>
    <thead>
      <tr>
        <th><%= @kinds.model.human_attribute_name("description")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr class="<%= cycle("odd", "even") -%>">
          <td><%= kind.description %></td>
          <td>
              <%= link_to(kind, html_options = {"title" => t('buttons.show')})  do %>
                <%= image_tag('if_user-id_285641.png')%>
              <% end %>
            </td>
            <td>
              <%= link_to(edit_kind_path(kind), html_options = {"title" => t('buttons.edit')}) do %>
                <%= image_tag('if_notepad_285631.png')%>
              <% end %>
            </td>
            <td>
              <%= link_to kind, method: :delete, data: { confirm: t('messages.confirm')}  do %>
                <%= image_tag('if_sign-error_299045.png')%>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>


